<% include ../partials/header.ejs %>
            <div class="container-fluid">
                <h3 class="text-dark mb-4">Invoices</h3>
                <div class="card shadow">
                    <div class="card-header py-3">
                        <p class="text-primary m-0 font-weight-bold">Invoices Info</p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                        <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                            <table class="table dataTable my-0" id="dataTable">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Due Date</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% invoices.forEach((invoice) => { %>
                                        <tr>
                                        <td><%=invoice.title%></td>
                                        <td><%= invoice.amount %></td>
                                        <td><% if (invoice.isPaid){ %>
                                            Paid
                                            <%} else { %>
                                            Not Paid
                                            <% } %>
                                        </td>
                                        <td><%= invoice.due.toDateString() %></td>
                                        <td><button class="btn btn-info btn-sm" onclick="window.location.href = '/invoice/<%=invoice._id%>';">View Invoice</button></td>
                                        
                                    </tr>
                                    <% }) %>
                                    
                                    
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td><strong>Title</strong></td>
                                        <td><strong>Amount</strong></td>
                                        <td><strong>Status</strong></td>
                                        <td><strong>Due Date</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footer.ejs %>